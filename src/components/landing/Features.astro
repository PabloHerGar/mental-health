---
import { features } from '../../config/features.json'
---

<section>
  <h2>Habilidades</h2>

  <ul class='ul_features'>
    {
      features.map(
        (
          feature // (feature: Feature) <- El tipo de dato del parÃ¡metro se debe definir, en este caso arriba como interfaz.
        ) => (
          <li class='li_features'>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </li>
        )
      )
    }
  </ul>
</section>
