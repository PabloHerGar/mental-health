    <!-- <div>
        <img src='/images/goteborg.svg' class='w-20 m-auto' alt='' />
        <p class='text-center mt-4'>Universidad de Goteborg</p>
      </div>
      <div class='text-center'>
        <img src='/images/michigan.svg' class='w-20 m-auto' alt='' />
        <p class='mt-4'>Universidad de Michigan</p>
      </div>
      <div class='text-center'>
        <img src='/images/oxford.svg' class='w-20 m-auto' alt='' />
        <p class='mt-4'>Universidad de Oxford</p>
      </div>
      <div class='text-center'>
        <img src='/images/sydney.svg' class='w-20 m-auto' alt='' />
        <p class='mt-4'>Universidad de Sidney</p>
      </div> -->

    <ol class='ol_titles'>
      {
        universities.map(
          (
            university // (university: University) <- El tipo de dato del parámetro se debe definir, en este caso arriba como interfaz.
          ) => (
            <li class='li_titles'>
              <img
                src={`/images/${university.title.toLowerCase()}.svg`}
                class='img_titles'
                alt='{university}'
              />
              <p class='p_titles'>Universidad de {university.title}</p>
            </li>
          )
        )
      }
    </ol>
